<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5pt"
    android:orientation="vertical"
    tools:context=".ThemDanhMuc">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10pt"
        android:text="Thêm album mới"
        android:textAlignment="center"
        android:textSize="48sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_maab"
        android:layout_width="279dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView3"
        android:layout_alignBaseline="@id/textView4"
        android:layout_centerInParent="false"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/textView4"
        android:ems="10"
        android:hint="Mã album..."
        android:inputType="text" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView3"
        android:layout_marginTop="5pt"
        android:layout_marginBottom="5pt"
        android:text="Mã album:"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/edt_tenab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_maab"
        android:layout_alignBaseline="@id/textView5"
        android:layout_toRightOf="@id/textView5"
        android:ems="10"
        android:hint="Tên album..."
        android:inputType="text" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView4"
        android:layout_marginTop="5pt"
        android:layout_marginBottom="5pt"
        android:text="Tên album:"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/edt_chude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_tenab"
        android:layout_alignBaseline="@id/textView6"
        android:layout_toRightOf="@id/textView6"
        android:ems="10"
        android:hint="Chủ đề album..."
        android:inputType="text" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView5"
        android:layout_marginTop="5pt"
        android:layout_marginBottom="5pt"
        android:text="Chủ đề:"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView6"
        android:layout_marginTop="3pt"
        android:layout_marginBottom="3pt"
        android:text="Chọn ảnh chủ đề:"
        android:textSize="24sp" />

    <ImageButton
        android:id="@+id/btn_chonanh"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_chude"
        android:layout_marginLeft="3pt"
        android:layout_toRightOf="@id/textView7"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <ImageView
        android:id="@+id/v_hienanhchon"
        android:layout_width="match_parent"
        android:layout_height="191dp"
        android:layout_below="@id/textView7"
        android:layout_marginTop="5pt"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <Button
        android:id="@+id/btn_themab"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/v_hienanhchon"
        android:layout_marginLeft="10pt"
        android:layout_marginTop="5pt"
        android:gravity="center|center_vertical"
        android:text="Thêm" />

    <Button
        android:id="@+id/btn_huy"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/v_hienanhchon"
        android:layout_marginStart="37dp"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="5pt"
        android:layout_marginRight="5pt"
        android:layout_toEndOf="@+id/btn_themab"
        android:layout_toRightOf="@id/btn_themab"
        android:gravity="center|center_vertical"
        android:text="Hủy" />
</RelativeLayout>